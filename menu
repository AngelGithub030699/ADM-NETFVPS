ferramentas_fun () {
msg -ama "$(fun_trans "MENU HERRAMIENTAS")"
msg -bar2
local Numb=1
for arqs in $(ls ${SCPfrm}); do
float_data "$arqs" "$Numb" && {
  script[$Numb]="$arqs"
  let Numb++
  }
done
echo -ne "\033[1;31m[\033[1;32m$Numb\033[1;31m]\033[1;37m > " && msg -azu "$(fun_trans "DETALLES DEL SISTEMA") $ofc"
script[$Numb]="systeminf"
let Numb++
echo -ne "\033[1;31m[\033[1;32m$Numb\033[1;31m]\033[1;37m > " && msg -azu "$(fun_trans "LIMPIAR CACHE SISTEMA") $ofc"
script[$Numb]="limpar"
let Numb++
echo -ne "\033[1;31m[\033[1;32m$Numb\033[1;31m]\033[1;37m > " && msg -verd "$(fun_trans "AGREGAR HERRAMIENTAS")"
script[$Numb]="agregar"
let Numb++
echo -ne "\033[1;31m[\033[1;32m$Numb\033[1;31m]\033[1;37m > " && msg -verm2 "$(fun_trans "REMOVER HERRAMIENTAS")"
script[$Numb]="remove"
echo -ne "\033[1;31m[\033[1;32m00\033[1;31m]\033[1;37m > " && msg -bra "$(fun_trans "VOLVER")"
script[0]="voltar"
msg -bar2
selection=$(selection_fun $Numb)
[[ -e "${SCPfrm}/${script[$selection]}" ]] && {
  ${SCPfrm}/${script[$selection]} ${id}
  } || {
  case ${script[$selection]} in
  "agregar")agregar_ferramenta;;
  "remove")remove_ferramenta;;
  "limpar")limpar_caches;;
  "systeminf")systen_info;;
  *)return 0;;
  esac
  }  
}
# Menu Instala��o
pid_inst () {
[[ $1 = "" ]] && echo -e "\033[1;31m[off]" && return 0
unset portas
portas_var=$(lsof -V -i tcp -P -n | grep -v "ESTABLISHED" |grep -v "COMMAND" | grep "LISTEN")
i=0
while read port; do
var1=$(echo $port | awk '{print $1}') && var2=$(echo $port | awk '{print $9}' | awk -F ":" '{print $2}')
[[ "$(echo -e ${portas[@]}|grep "$var1 $var2")" ]] || {
    portas[$i]="$var1 $var2\n"
    let i++
    }
done <<< "$portas_var"
[[ $(echo "${portas[@]}"|grep "$1") ]] && echo -e "\033[1;32m[on]" || echo -e "\033[1;31m[off]"
}
menu_inst () {
msg -ama "$(fun_trans "MENU  INSTALACION")"
msg -bar
local Numb=1
for arqs in $(ls ${SCPinst}); do
float_data "$arqs" "$Numb" && {
  script[$Numb]="$arqs"
  let Numb++
  }
done
echo -ne "\033[1;31m[\033[1;32m$Numb\033[1;31m]\033[1;37m > " && msg -azu "$(fun_trans "REINICIAR SERVICIOS")"
script[$Numb]="reiniciar"
echo -e "\033[1;31m[\033[1;32m00\033[1;31m]\033[1;37m > " && msg -bra "$(fun_trans "VOLVER")"
msg -bar
script[0]="voltar"
selection=999
selection=$(selection_fun $Numb)
[[ -e "${SCPinst}/${script[$selection]}" ]] && {
  ${SCPinst}/${script[$selection]} ${id}
  } || {
  case ${script[$selection]} in
  "reiniciar")reiniciarsistema;;
  *)return 0;;
  esac
  }
}
# MENU FLUTUANTE
menu_func () {
local options=${#@}
local array
for((num=1; num<=$options; num++)); do
echo -ne "\033[1;31m[\033[1;32m0$num\033[1;31m]\033[1;37m > \033[1;37m"
array=(${!num})
  case ${array[0]} in
    "-vd")msg -verd "$(fun_trans "${array[@]:1}")" | sed ':a;N;$!ba;s/\n/ /g';;
    "-vm")msg -verm2 "$(fun_trans "${array[@]:1}")" | sed ':a;N;$!ba;s/\n/ /g';;
  "-azc")msg -azuc "$(fun_trans "${array[@]:1}")" | sed ':a;N;$!ba;s/\n/ /g';;
  "-rc")msg -rojoc "$(fun_trans "${array[@]:1}")" | sed ':a;N;$!ba;s/\n/ /g';;
  "-am")msg -ama "$(fun_trans "${array[@]:1}")" | sed ':a;N;$!ba;s/\n/ /g';;
  "-bl")msg -bra "$(fun_trans "${array[@]:1}")" | sed ':a;N;$!ba;s/\n/ /g';;
    "-fi")msg -azu "$(fun_trans "${array[@]:2}") ${array[1]}" | sed ':a;N;$!ba;s/\n/ /g';;
    *)msg -azu "$(fun_trans "${array[@]}")" | sed ':a;N;$!ba;s/\n/ /g';;
  esac
done
}
# SISTEMA DE SELECAO
selection_fun () {
local selection="null"
local range
for((i=0; i<=$1; i++)); do range[$i]="$i "; done
while [[ ! $(echo ${range[*]}|grep -w "$selection") ]]; do
echo -ne "\033[1;37m$(fun_trans "Selecione una Opcion"): " >&2
read selection
tput cuu1 >&2 && tput dl1 >&2
done
echo $selection
}
on="\033[1;32m[ON]" && off="\033[1;31m[OFF]"
[[ $(ps x | grep badvpn | grep -v grep | awk '{print $1}') ]] && badvpn=$on || badvpn=$off
# EXECU��O MENU
export -f msg
export -f selection_fun
export -f fun_trans
export -f  menu_func
export -f meu_ip
export -f fun_ip
clear
msg -bar
msg -ama "$(fun_trans "PUERTAS ACTIVAS E INFORMACIONES DEL SERVIDOR VPS!!")"
msg -bar
memorias
msg -bar
mine_port
echo -e "\033[1;32m ° \033[1;37mBADVPN:\e[0m" "$badvpn"
msg -bar
echo -ne "\033[1;32m ° \033[1;37m$(fun_trans "SISTEMA OPERATIVO"): " && msg -verd "$(os_system)  "
echo -ne "\033[1;32m ° \033[1;37m$(fun_trans "DIRECCION DE LA MAQUINA"): " && msg -verd "$(meu_ip)"
[[ -e ${SCPdir}/USRonlines ]] && echo -ne "\033[1;32m °\033[1;37m $(fun_trans "USUARIOS EN LINEA"): " && msg -verd "$(cat ${SCPdir}/USRonlines) $(fun_trans "Usuarios")"
[[ -e ${SCPdir}/USRexpired ]] && echo -ne "\033[1;32m °\033[1;37m $(fun_trans "USUARIOS EXPIRADOS"): " && msg -verd "$(cat ${SCPdir}/USRexpired) $(fun_trans "Usuarios")"
[[ -e ${SCPdir}/message.txt ]] && echo -e "\033[1;32m °\033[1;37m MENSAJE: $(cat ${SCPdir}/message.txt)"
msg -bar
echo -e "\033[1;31m@dxvid093 \033[1;32m@Nedzero \033[1;33m@efra09 \033[1;34m@Hamc \033[1;35m@Alacran \033[1;36m@Jorgebarba\e[0m"
