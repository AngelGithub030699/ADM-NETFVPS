"fai2ban.sh")echo -ne "\033[1;31m[\033[1;32m$2\033[1;31m]\033[1;37m > " && msg -azu "$(fun_trans "FAIL2BAN PROTECCION") $ofc";;
"MasterBin.sh")echo -ne "\033[1;31m[\033[1;32m0$2\033[1;31m]\033[1;37m > " && msg -azu "$(fun_trans "CONSULTAR UN BIN") $ofc";;
