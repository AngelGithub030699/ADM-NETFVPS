"htop.sh")echo -ne "\033[1;31m[\033[1;32m$2\033[1;31m]\033[1;37m > " && msg -azu "$(fun_trans "HTOP PROCESOS DEL SISTEMA") $dev";;
"Proxy-Publico.sh")echo -ne "\033[1;31m[\033[1;32m0$2\033[1;31m]\033[1;37m > " && msg -azu "$(fun_trans "PROXY COLOR PUBLICO") $premium";;
"Proxy-Privado.sh")echo -ne "\033[1;31m[\033[1;32m0$2\033[1;31m]\033[1;37m > " && msg -azu "$(fun_trans "PROXY COLOR PRIVADO") $premium";;
"GENERADOR_BIN.sh")echo -ne "\033[1;31m[\033[1;32m0$2\033[1;31m]\033[1;37m > " && msg -azu "$(fun_trans "GENERADOR DE CC") $dev";;
